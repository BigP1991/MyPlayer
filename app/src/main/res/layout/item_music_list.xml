<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/music_item_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/about_banner" />

            <ImageView
                android:id="@+id/author_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/home_page_playlist" />

            <TextView
                android:id="@+id/music_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/author_img"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/author_img"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/music_item_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/music_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_item_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/author_img"
                android:maxLines="1"
                android:text="我是副标题"
                android:textColor="@color/music_item_desc"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/music_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/music_item_sub_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/author_img"
                android:maxLines="1"
                android:text="200"
                android:textColor="@color/music_item_desc"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</merge>
